<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>Leading Software Thinkers</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>

  <nav class="bg-white border-gray-200 dark:bg-gray-900" data-pg-collapsed>
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4" data-pg-collapsed>
      <a href="https://leadingsoftwarethinkers.com/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Leading Software
          Thinkers</span>
      </a>
    </div>
  </nav>
  <main class="mt-0">
    <div class="container px-4 mx-auto flex gap-2 mx-4 my-0 lg:my-11 place-content-center">
      {% include "filters.liquid" %}
    </div>

    <div class="container px-4 mx-auto">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 my-4 lg:my-11 gap-2">
        {% assign posts = posts | sort: "name" %}
        {% for post in posts %}
        {% include "post.liquid" %}
        {% endfor %}
      </div>
    </div>
  </main>
</body>

<script>
  function setFilter(category) {
    document.querySelectorAll(".post").forEach(function (element) { element.dataset.category = category })
  }
</script>

</html>