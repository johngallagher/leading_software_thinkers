<div>
  <input type="radio" onclick="setFilter('{{ filter }}')" name="filters" id="filters_{{ filter }}" class="sr-only peer" {% if forloop.first %} checked {% endif -%} />
  <label for="filters_{{ filter }}"
    class="px-4 py-2 bg-gray-200 text-gray-800 rounded cursor-pointer peer-checked:bg-blue-500 peer-checked:text-white">
    {{ filter | humanize }}
  </label>
</div>